<h1>Register to this cool site</h1>

@model user

<form action="Login"  method="post">
    <div class="form-row">
        <div class="col-lg-3">
            <input type="text" placeholder="Username:" class="form-control my-3 p-2" name="username">
            <span asp-validation-for ="username"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input type="email" placeholder="Email:" class="form-control my-3 p-2" name="email">
            <span asp-validation-for ="email"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input type="password" placeholder="Password:" class="form-control my-3 p-2" name="password">
            <span asp-validation-for ="password"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input type="password" placeholder="Confirm Password:" class="form-control my-3 p-2" name="Confirm">
            <span asp-validation-for ="Confirm"></span>
        </div>
    </div>
    
    <div class="form-row">
        <div class="col-lg-3">
            <input type="submit" value="Register" class="form-control my-3 p-2 btn1 mt-3 mb-5">
        </div>
    </div>
</form>

